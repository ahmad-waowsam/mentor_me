<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#def8f8">

        <!-- Second Circle (Touching Left) -->

        <ImageView
            android:id="@+id/circleTop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-100dp"
            android:alpha="0.5"
            android:background="@drawable/bigcircle" />

        <!-- Second Circle (Touching Left) -->
        <ImageView
            android:id="@+id/circleLeft"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-70dp"
            android:alpha="0.5"
            android:background="@drawable/bigcircle" />

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mentor"
                android:textColor="#2EA7AE"
                android:textSize="44sp" />

            <TextView
                android:id="@+id/textViewMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="me"
                android:textColor="#FFC90A"
                android:textSize="44sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="connect.ask.learn"
            />



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
